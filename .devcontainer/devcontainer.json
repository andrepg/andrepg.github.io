// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
	"name": "andrepg.github.io",
	"dockerComposeFile": [
		"docker-compose.yml"
	],
	"service": "andrepg_website",
	"postCreateCommand": "npm install --prefer-offline",
	"features": {
		"ghcr.io/cirolosapio/devcontainers-features/alpine-git:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-ohmyzsh:0": {},
		"ghcr.io/devcontainers-contrib/features/vue-cli:2": {}		
	},
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"christian-kohler.npm-intellisense",
				"bradlc.vscode-tailwindcss",
				"vitest.explorer",
				"seatonjiang.gitmoji-vscode",
				"dsznajder.es7-react-js-snippets",
				"esbenp.prettier-vscode",
				"formulahendry.auto-rename-tag",
				"planbcoding.vscode-react-refactor",
				"albert.TabOut",
				"xabikos.JavaScriptSnippets",
				"christian-kohler.path-intellisense",
				"ecmel.vscode-html-css",
				"formulahendry.auto-close-tag",
				"aaron-bond.better-comments",
				"VisualStudioExptTeam.vscodeintellicode",
				"Postman.postman-for-vscode",
				"antfu.vite"
			]
		}
	}
}
